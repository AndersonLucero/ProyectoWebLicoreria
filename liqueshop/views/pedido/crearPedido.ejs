<%- include('../compartido/estilos-generales/estilos-generales-component') %>

<style>
    .carrito{
        font-family: arial, sans-serif;
        border-collapse: separate;
        border-spacing: 5px;
        width: 100%;
    }
    .carrito1{
        border: 1px solid #dddddd;
        padding: 8px;
        text-align:center;
    }

    .encabezado{
        background: white;
    }

</style>

<table>
    <tr>
        <th>
            <div class="menucontent">

                <% let logeado = typeof usuario !== 'undefined' %>
                <%if(logeado){%>
                    <%- include('../compartido/menu/menu-component-logout') %>
                <%} else {%>
                    <%- include('../compartido/menu/menu-component') %>
                <%}%>

            </div>
        </th>
    </tr>
    <tr>
        <th>
            <div class = "container">
                <div>
                    <div class="encabezado">
                        <table>
                            <tr>
                                <th>
                                    <img src="https://southcentralus1-mediap.svc.ms/transform/thumbnail?provider=spo&inputFormat=png&cs=fFNQTw&docid=https%3A%2F%2Fepnecuador-my.sharepoint.com%3A443%2F_api%2Fv2.0%2Fdrives%2Fb!dsMrcanH6kalACFdcnDB3NHteupcEGBAmDDAAflX0dHf3D-9QL5HTYNQMWFmqsAA%2Fitems%2F01SLGYNZHTYB3FMFOY5NEZ36VCQUDFXKDX%3Fversion%3DPublished&access_token=eyJ0eXAiOiJKV1QiLCJhbGciOiJub25lIn0..N2VMYy9OaHIxaTYzcG9hS05SdDRXOEo3ejlwQTNtOFVoT2t4SVY1eTErYz0&encodeFailures=1&srcWidth=&srcHeight=&width=1920&height=893&action=Access" alt="" width="230" height="250">
                                </th>
                                <th>
                                    <h1>Carrito LiqueShop</h1>
                                </th>
                            </tr>
                        </table>
                    </div>
                    <div class="content">

                        <table class="carrito">
                            <tr>
                                <th class="carrito1" >Producto</th>
                                <th class="carrito1" >Precio</th>
                                <th class="carrito1">cantidad</th>
                                <th class="carrito1">total</th>
                            </tr>
                            <% carrito.forEach( (objeto)=>{ %>
                                <tr>
                                    <td class="carrito1"><%= objeto.licor.nombreLicor %></td>
                                    <td class="carrito1"><%= objeto.licor.precioLicor %></td>
                                    <td class="carrito1"><%= objeto.cantidadLicor %></td>
                                    <td class="carrito1"><%= objeto.precioSubTotal %></td>
                                </tr>
                            <% } ) %>
                        </table>

                        <form action="../../pedido/hacerPedido"
                              method="POST">
                            <button type="submit">Hacer pedido</button>
                        </form>

                    </div>
                </div>
            </div>
        </th>
    </tr>
</table>



